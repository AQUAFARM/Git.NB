<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
	android:orientation="vertical"
    android:paddingBottom="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:background="@drawable/view_border">
        <TextView
            android:id="@+id/issue_updated"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="#758a99"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/issue_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="35dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="13dp"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:divider="@drawable/vertical_line"
        android:showDividers = "middle"
        android:weightSum="2"
        android:background="@drawable/view_border">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:divider="@drawable/horizontal_line_57"
            android:showDividers = "middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="17dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:text="{fe-state}"/>

                <TextView
                    android:id="@+id/state"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text=""
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="17dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:text="{fe-comment}"/>
                <TextView
                    android:id="@+id/comments"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text=""
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="17dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:text="{fe-assignee}"/>
                <TextView
                    android:id="@+id/assignee"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text=""
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:divider="@drawable/horizontal_line"
            android:showDividers = "middle">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="17dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:text="{fe-label}"/>
                <TextView
                    android:id="@+id/label"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:ellipsize="end"
                    android:text=""
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="17dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:text="{fe-milestone}"/>
                <TextView
                    android:id="@+id/milestone"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text=""
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>